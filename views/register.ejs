<!DOCTYPE html>
<html>

<head>
    <%- include('partials/_head') %>
</head>

<body>
    <div class="container">
        <%- include('partials/_navbar') %>

        <div class="jumbotron">
            <h1>Registration Page</h1>
            <p class="lead">Sign up now to start shortening URLs today!</p>
        </div>

        <%- include('partials/_errors') %>

        <div class="row">
            <div class="col-lg-12">
                <form action="/register" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label for="inputEmail" class="col-sm-2 control-label">Email Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputEmail" name="inputEmail" placeholder="youremail@yourdomain.com" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Password here" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Register</button>
                        </div>
                    </div>
                    </form>
            </div>
        </div>

        <%- include('partials/_footer') %>
    </div>
</body>

</html>