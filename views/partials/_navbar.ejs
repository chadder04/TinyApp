<div class="header clearfix">
    <nav>
        <div class="pull-right">
            <% if (siteData.userLoggedIn) { %>
                <form method="POST" action="/logout" class="form-inline">
                    <ul class="nav nav-pills pull-right">
                        <li role="presentation"><p class="navbar-text"><%= siteData.userTable[siteData.userLoggedInUserID].userEmail %></p></li>
                        <li role="presentation"><button type="submit" class="btn logout" name="logout" >Logout</button></li>
                    </ul>
                </form>
            <% } else { %>
                <form method="POST" action="/login" class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="exampleInputEmail3">Username</label>
                        <input type="text" class="form-control" id="inputUsername" name="inputUsername" placeholder="Username" required>
                    </div>
                    <button type="submit" class="btn btn-default">Sign in</button>
                    <a href="/register" class="btn btn-default">Register</a>
                </form>
            <% } %>
        </div>
        <h3 class="text-muted">TinyApp URL Shortener</h3>
    </nav>
</div>