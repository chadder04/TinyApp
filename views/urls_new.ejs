<!DOCTYPE html>
<html>

<head>
    <%- include('partials/_head') %>
</head>

<body>
    <div class="container">
        <%- include('partials/_navbar') %>

        <div class="jumbotron">
            <h1>Create a new TinyURL</h1>
            <p class="lead">Fill out the form below!</p>
        </div>

        <%- include('partials/_errors') %>

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group pull-right">
                    <button class="btn btn-primary">Create New TinyURL</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form action="/urls" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">TinyURL ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputTinyURLID" name="inputTinyURLID" placeholder="TinyURL ID (will be auto-generated)" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Long URL</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputURL" name="inputLongURL" placeholder="http://" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                    </form>
            </div>
        </div>

        <%- include('partials/_footer') %>
    </div>
</body>

</html>