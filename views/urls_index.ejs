<!DOCTYPE html>
<html>

<head>
    <%- include('partials/_head') %>
</head>

<body>
    <div class="container">
        <%- include('partials/_navbar') %>

        <div class="jumbotron">
            <h1>See all TinyURLs</h1>
            <p class="lead">Check out your shortened urls below!</p>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group pull-right">
                    <a href="/urls/new" class="btn btn-primary">Create New TinyURL</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Tiny URL</th>
                                <th>Long URL</th>
                                <th><span class="pull-right">Actions</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (Object.keys(siteData.urlDatabase).length == 0) { %>
                                <tr>
                                    <td colspan="3"><span>Sorry, there are no TinyURLs in the database at this time!</span></td>
                                </tr>
                            <% } else { %>
                                <% for (key in siteData.urlDatabase) { %>
                                    <tr>
                                        <td><%= key %></td>
                                        <td><%= siteData.urlDatabase[key] %></td>
                                        <td>
                                            <div class="btn-group pull-right" role="group" aria-label="...">
                                                <form method="POST" action="/urls/<%= key %>/delete">
                                                    <a href="/urls/<%= key %>" role="button" class="btn btn-success">Edit</a>
                                                    <a href="/u/<%= key %>" role="button" class="btn btn-info">Follow</a>
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('partials/_footer') %>
    </div>
</body>

</html>